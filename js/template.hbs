{{#each pets}}
  <div class="pet">
    <div class="photo-column">
      <img src="{{photo}}">
    </div>

    <div class="info-column">
      <h2>{{name}} <span class="species">({{species}})</span></h2>
      <!-- The method comes from JS helpers file -->
      <!-- The dollar sign calls the method from helper -->
      <p>Age: {{$calculateAge birthYear}}</p>

      {{#if favFoods}}
      <h4 class="headline-bar">Favorite Foods</h4>
      <ul class="favorite-foods">
        {{#each favFoods}}
          <!-- Tripple bracket treats the html as text. -->
          <!-- The this keyword iterates in array and outputs each data -->
          <li>{{{this}}}</li>
        {{/each}}
      </ul>
      {{/if}}
    </div>
  </div>
{{/each}}
